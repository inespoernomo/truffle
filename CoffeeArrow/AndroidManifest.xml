<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.coffeearrow"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/appName"
        android:theme="@style/AppTheme"
        android:debuggable="true" >
        <activity
            android:name=".SignIn"
            android:label="@string/signIn" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.coffeearrow.SignIn" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NotificationsActivity"
            android:label="@string/title_activity_notifications" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.coffeearrow.NotificationsActivity" />
        </activity>
        <activity
            android:name=".DisplaySearchResultsActivity"
            android:theme="@style/customTheme"
            android:label="@string/title_activity_display_search_results" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.app.ListActivity" />
        </activity>
        <activity
            android:name=".ShowUserProfileActivity"
            android:label="@string/title_activity_show_user_profile" >
        </activity>
        <activity
            android:name=".SelfProfileActivity"
            android:label="@string/title_activity_show_user_profile" >
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name=".PendingVerificationActivity"
            android:label="@string/title_activity_pending_verification" >
        </activity>
        <activity
            android:name=".RequestHistoryActivity"
            android:label="@string/title_activity_request_history" >
        </activity>
        <activity
            android:name=".TestActivity"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name=".UploadImageActivity"
            android:label="@string/title_activity_upload_image" >
        </activity>
        <activity
            android:name=".ChangeDateActivity"
            android:label="@string/title_activity_change_date" >
        </activity>
        <activity
            android:name=".NewDateActivity"
            android:label="@string/title_activity_new_date" >
        </activity>
        <activity
            android:name=".EditImageActivity"
            android:label="@string/title_activity_edit_image" >
        </activity>
        <activity
            android:name=".AuthorizeAmazonPaymentActivity"
            android:label="@string/title_activity_authorize_amazon_payment" >
        </activity>
    </application>

</manifest>
