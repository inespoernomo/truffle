<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Holo" />

    <style name="MyTheme" parent="android:Theme.Light">
        <item name="android:textAppearance">@style/MyDefaultTextAppearance</item>
    </style>
    

    <style name="MyActionBarStyle" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:displayOptions">showTitle</item>
       
    </style>
    
    <style name="DisplayTheme" parent="android:Theme.Holo">
       <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
   </style>

    <style name="MyDefaultTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:layout_width">200dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#333</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="appNameStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#A52A2A</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="login" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/background</item>
    </style>
    
    <style name="transparency" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/transparenttext</item>
    </style>
    
     <style name="appBackground" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/appbackground</item>
    </style>
    
    <style name="signUp" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/border</item>
    </style>
    
    <style name="loginbox" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="whiteBorder" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/whiteborder</item>
    </style>
    
    <style name="button" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/buttonbackground</item>
    </style>
    
     <style name="bluebutton" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/bluebuttonbackground</item>
    </style>
    <style name="textColor" parent="@android:style/TextAppearance">
        <item name="android:textColor">@drawable/buttonbackground</item>
    </style>

    <style name="signInbutton" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/signinbuttonbackground</item>
    </style>
    
    <style name="whitetext" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="email" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/borderemail</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>
     <style name="radioButton" parent="@android:style/TextAppearance">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WindowTitleBackground">
      
    </style>
    
    <style name="notitle" parent="android:Theme.Holo">
	    <item name="android:windowNoTitle">true</item>
	</style>

    <style name="customEditText" parent="@android:style/Widget.EditText">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/borderemail</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>