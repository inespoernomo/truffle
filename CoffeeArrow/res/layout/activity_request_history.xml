    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4" 
        android:fillViewport="true"
        android:orientation="vertical" >

        <!--
              <TextView
            android:id="@+id/initiaterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="is asking you out / is asked out by you"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        -->

        <LinearLayout
            android:id="@+id/textContainer"            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/loginbox"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="With"
                android:textStyle="bold"
                android:textColor="@color/brown"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/preModifierTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/brown"
                android:text="Prev Meeting info"
                android:layout_marginTop="15dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/prePlaceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                android:id="@+id/preTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/lastModifierTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/brown"
                android:text="New Meeting info"
                android:textAppearance="?android:attr/textAppearanceMedium" />
 
            <TextView
                android:id="@+id/placeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView	
                android:layout_marginTop="15dp"
                android:id="@+id/lockDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This date is not settled."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#006400" />

            <Button
                android:id="@+id/surebutton"
                style="@style/bluebutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="lockTheDate"
                android:text="@string/sureButton" />

            <Button
                android:id="@+id/changeDatebutton"
                style="@style/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:onClick="changeDate"
                android:text="@string/changeDateButton" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>